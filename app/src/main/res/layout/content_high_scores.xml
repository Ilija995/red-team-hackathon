<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="eu.execom.hackaton.beacon.activity.HighScoresActivity"
	tools:showIn="@layout/activity_high_scores"
	android:background="#006699">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Classic:"
		android:id="@+id/classicHighScoreTitle"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_marginStart="44dp"
		android:layout_marginTop="154dp"
		android:textSize="50px"
		android:gravity="left"
		android:textColor="#FFFFFF"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="High Scores"
		android:id="@+id/highScoresTitle"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="57dp"
		android:textSize="100px"
		android:gravity="center"
		android:textColor="#FFFFFF"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="New Text"
		android:id="@+id/classicHighScore"
		android:layout_alignTop="@+id/classicHighScoreTitle"
		android:layout_alignEnd="@+id/highScoresTitle"
		android:textSize="50px"
		android:gravity="right"
		android:textColor="#FFFFFF"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Arcade:"
		android:id="@+id/arcadeHighScoreTitle"
		android:textSize="50px"
		android:textColor="#FFFFFF"
		android:layout_below="@+id/classicHighScoreTitle"
		android:layout_alignStart="@+id/classicHighScoreTitle"
		android:gravity="left"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="New Text"
		android:id="@+id/arcadeHighScore"
		android:textSize="50px"
		android:gravity="right"
		android:textColor="#FFFFFF"
		android:layout_alignTop="@+id/arcadeHighScoreTitle"
		android:layout_alignStart="@+id/classicHighScore"/>
</RelativeLayout>
